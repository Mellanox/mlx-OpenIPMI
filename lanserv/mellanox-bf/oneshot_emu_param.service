[Unit]
Description=Collect about BlueField's sensors and FRUs once
After=rasdaemon.service

[Service]
Type=oneshot
EnvironmentFile=/etc/ipmi/progconf
ExecStart=/bin/bash -c '/usr/bin/set_emu_param.sh ${BF_FAMILY} ${SUPPORT_IPMB} ${OOB_IP} ${EXTERNAL_DDR} ${FRU_TIMER}'

[Install]
WantedBy=multi-user.target
